        <activity
            android:name=".ScannerActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ZbarScannerActivity" />
        <activity android:name=".ZbarMainActivity" />
        <activity android:name=".TabsActivity" />
        <activity android:name=".LocalNotificationActivity" />
        <activity android:name=".WebviewWithImageUploadActivity" />
        <activity android:name=".TableActivity" />
        <activity android:name=".PieChartActivity" />
        <activity android:name=".BarChartActivity" />
        <activity android:name=".ChartActivity" />
        <activity android:name=".LineChartActivity" />
        <activity android:name=".LightAnimationActivity" />
