<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="40dp"
        android:width="50dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/orange"></solid>
            <gradient android:startColor="@color/orange" android:endColor="@color/pink"  android:angle="135"></gradient>
            <corners android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"></corners>
        </shape>
    </item>
    <item android:drawable="@drawable/arrow"
        android:height="30dp"
        android:width="30dp"
        android:gravity="center"></item>
</layer-list>